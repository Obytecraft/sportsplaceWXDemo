      <view id="subcurrent">
        <image class="logo" src="../../static/images/logo.jpg" />
        <view class="title">
          <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
        </view>
        <view class="title2">{{userInfo.nickName}}</view>
      </view>
    </view>
    <view class="cu-list menu card-menu margin-top-xl margin-bottom-sm shadow-xl" style='margin-top: 150rpx !important;'>
      <view class="cu-item bgc">
        <view class='content'>
          <text class='icon-phone text-white'></text>
          <text class='text-white'>GitHub</text>
        </view>
      </view>
      <view class="cu-item bgc">
        <view class='content'>
          <text class='icon-github text-white'></text>
