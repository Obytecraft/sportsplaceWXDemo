        </view>
      </view>
      <view class="cu-item bgc">
        <view class='content'>
          <text class='icon-addressbook text-white'></text>
          <text class='text-white'>{{userInfo.province}} {{userInfo.city}}</text>
        </view>
      </view>
      <view class="cu-item bgc">
        <view class='content'>
          <text class='icon-github text-white'></text>
          <text class='text-white'>GitHub</text>
        </view>
      </view>
      <view class="cu-item bgc">
        <view class='content'>
          <text class='icon-github text-white'></text>
          <text class='text-white'>GitHub</text>
        </view>
      </view>
      <view class="cu-item bgc">
        <view class='content'>
          <text class='icon-github text-white'></text>
          <text class='text-white'>GitHub</text>
        </view>
      </view>
    </view>
  </view>
  <view class="padding-xl">
    <button wx:if="{{!hasUserinfo && canIUse}}" class="cu-btn block bg-blue margin-tb-sm lg" open-type="getUserInfo" bindgetuserinfo='getUserInfo'> Authorize </button>
  </view>
</scroll-view>